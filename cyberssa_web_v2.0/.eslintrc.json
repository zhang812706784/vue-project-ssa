{
  "extends": "standard",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "html",
    "standard"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      0,
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      0,
      {
        "max": 100
      }
    ],
    "no-console": [
      0
    ],
    "no-multi-spaces": 0,
    "no-debugger": 0,
    "no-unused-vars": 0,
    "no-trailing-spaces": 0,
    "padded-blocks": 0,
    "no-empty": 2,
    "no-eq-null": 2,
    "no-new": 0,
    "no-fallthrough": 0,
    "no-unreachable": 0
  }
}
